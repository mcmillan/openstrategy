<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Open Strategy</title>

    <%= csrf_meta_tags %>
    <%=
      stylesheet_link_tag :application,
                          '//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic',
                          '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'
    %>
    <%= favicon_link_tag 'favicon.png', type: 'image/png' %>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <%= link_to root_url do %>
          <%= image_srcset_tag 'logo.png', { '1x' => 'logo.png', '2x' => 'logo@2x.png' }, class: 'header-logo' %>
        <% end %>

        <div class="nav">
          <%= link_to 'Tools', root_url, class: nav_class('categories') %>
          <% if user_signed_in? %>
            <%= link_to 'Favorites', favorites_path, class: nav_class('favorites') %>
          <% end %>
          <% if current_user.try(:community_enabled?) %>
            <%= link_to 'Community', community_path, class: nav_class('posts') %>
          <% end %>
        </div>

        <div class="user-overview">
          <% if user_signed_in? %>
            <div class="user-overview__name"><%= name(current_user) %></div>
            <img src="<%= current_user.image %>" class="user-overview__image">
          <% else %>
            <%= link_to 'Sign In', user_omniauth_authorize_path(provider: :twitter), class: 'button button--twitter' %>
          <% end %>
        </div>
      </div>

      <div class="page">
        <% if flash[:alert] %>
          <div class="alert alert--error">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag :application %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-58153489-2', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
